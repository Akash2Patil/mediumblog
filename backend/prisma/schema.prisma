model User {
  id  String @id @default(uuid())
  email String @unique
  name String?
  password String
  post Post[] 
}

model Post{
  id String @id @default(uuid())
  title String
  content String
  published Boolean @default(false)
  author User @relation(fields: [authorId], references: [id])
  authorId String
}

